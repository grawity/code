#!/usr/bin/env bash
# addr2names -- look up hostnames for multiple IP addresses

. lib.bash || exit

verbose=0

while getopts ":v" OPT; do
	case $OPT in
	v) verbose=1;;
	*) lib::die_getopts;;
	esac
done; shift $((OPTIND-1))

for addr; do
	{
	name=$(addr2name "$addr")
	if [[ ! "$name" || "$name" == "$addr" ]]; then
		if (( verbose )); then
			name="-"
		else
			name=""
		fi
	fi
	if [[ "$name" ]]; then
		echo "$addr $name"
	fi
	} &
done | natsort
