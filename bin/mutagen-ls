#!/usr/bin/env python3
import sys
import mutagen

for file in sys.argv[1:]:
    tags = mutagen.File(file)
    if tags:
        artist = None
        if "TPE1" in tags:
            artist = tags["TPE1"]
        else:
            pass
        title = None
        if "TIT2" in tags:
            title = tags["TIT2"]
        else:
            pass
        if artist or title:
            artist = artist or "[Unknown artist]"
            title = title or "[Unknown title]"
            print("%s: %s - %s" % (file, artist, title))
