#!/bin/sh
# osc - send operating system commands
# based on vte src/osc

if [ "$#" -eq 0 ] ; then
	echo usage: `basename $0` 'command [...]'
	echo commands:
	echo "	0 'title'	change icon name and window title"
	echo "	1 'title'	change icon name"
	echo "	2 'title'	change window title"
	echo "	6 'uri'		change current file uri (vte)"
	echo "	7 'uri'		change current directory uri (vte)"
	echo "	12 'color'	change cursor color"
	echo "  50 'font'       change font (Xterm)"
	exit
fi

args=
for arg in "$@"; do
	if [ "$args" = "" ] ; then
		args="$arg"
	else
		args="$args;$arg"
	fi
done

printf '\033]%s\007' "$args"
