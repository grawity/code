#!/usr/bin/env bash

. lib.bash || exit

tool=$(osguess package-mgr) || exit

case $tool in
	pacman)
		if ! have expac; then
			vdie "expac not found"
		fi
		{ expac -Q '%r/%n %v' "$@" || true;
		  expac -S '%r/%n %v' "$@" || true; } |
		{
			declare -a packages=()
			declare -A versions=()
			declare -i width=0

			while read -r name version; do
				packages+=("$name")
				versions["$name"]=$version
				if (( ${#name} > width )); then
					width=${#name}
				fi
			done

			for name in "${packages[@]}"; do
				printf '%-*s %s\n' "$width" "$name" "${versions["$name"]}"
			done
		}
		;;
	*)
		echo "${0##*/}: unknown distribution" >&2
		exit 2
esac
