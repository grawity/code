#!/bin/sh
# chfont - change the default font of various programs

. lib.bash || exit

require() {
	if [[ $font && $font != '-' ]]; then
		case $1 in
		gtk)
			re=' [[:digit:]]+$'
			eg='Cantarell 11'
			[[ $font =~ $re ]];;
		esac || die "bad font spec '$font' (example: '$eg')"
	fi
}

do_gsettings() {
	local schema=$1 key=$2 value=$3
	if [[ $value == '-' || $value == 'reset' ]]; then
		gsettings reset "$schema" "$key"
	elif [[ $value ]]; then
		gsettings set "$schema" "$key" "$value"
	else
		gsettings get "$schema" "$key"
	fi
}

do_dconf() {
	local path=$1 value=$2
	if [[ $value == '-' || $value == 'reset' ]]; then
		dconf reset "$path"
	elif [[ $value ]]; then
		dconf write "$path" "'$value'"
	else
		dconf read "$path"
	fi
}

tweak=$1 value=$2

case $tweak in
attach-dialogs)
	do_gsettings org.gnome.shell.overrides attach-modal-dialogs "$value"
	;;
wallpaper)
	do_gsettings org.gnome.desktop.background picture-uri "$value"
	;;
*)
	die "unknown setting '$tweak'"
	;;
esac
