#!/usr/bin/env bash
# manage the .core DNS zone

#. lib.bash || exit

Fzone='core'
Rzone='0.7.10.in-addr.arpa'

UpdateKey='/etc/rndc.key'
Bindhost='10.7.0.1'
Bindport='40054'

Ffile="/var/named/core.zone"
Rfile="/var/named/arpa-10.7.0.zone"

zone=$Fzone
file=$Ffile

do_nsupdate() {
	local zone=$1; shift
	printf "%s\n" \
		"server $Bindhost $Bindport"	\
		"zone $zone"					\
		"$@"							\
		"send"							\
	| nsupdate -k "$UpdateKey";
}

do_dig() { dig "@$Bindhost" -p "$Bindport" +domain="$zone" "$@"; }

do_lookup() { do_dig +noall +answer +nocl "$@"; }

do_axfr() { do_dig +noall +answer +nocl -t AXFR -q "$1."; }

do_edit() {
	local zone=$1 file=$2
	rndc freeze "$zone" && sudo $EDITOR "$file" && rndc thaw "$zone"
}

do_journal() {
	local file=$1 num=${2:-15}
	echo -e "\e[1mShowing $num latest entries:\e[m"
	named-journalprint "$file" | awk '$5 != "SOA"' | tail -$num \
	| sed 's/^add/\x1B[32m&\x1B[m/; s/^del/\x1B[31m&\x1B[m/; s/$/\x1B[m/'
}

ttl() { echo ${ttl:=$(do_dig +short "$zone." SOA | awk '{print $7}')}; }

cmd=$1; shift; case $cmd in
	add)
		name=$1 type=$2 data=$3
		do_nsupdate "$Fzone" \
			"add $name $(ttl) $type $data" ;;
	set)
		name=$1 type=$2 data=$3
		do_nsupdate "$Fzone" \
			"del $name" \
			"add $name $(ttl) $type $data" ;;
	del)
		name=$1 type=$2 data=$3
		do_nsupdate "$Fzone" \
			"del $name $(ttl) $type $data" ;;
	dhcp-add)
		duid=$1 ip=$2 host=$3 dom=$4
		do_nsupdate "$Fzone" \
			"del $host.$Fzone" \
			"add $host.$Fzone $(ttl) A $ip" ;;
	setptr)
		ip=$1 name=$2
		iparpa=$(arpaname $ip)
		do_nsupdate "$Rzone" \
			"del $iparpa" \
			"add $iparpa $(ttl) PTR $name" ;;
	delptr)
		ip=$1
		iparpa=$(arpaname $ip)
		do_nsupdate "$Rzone" \
			"del $iparpa" ;;
	log|tail)
		do_journal "$Ffile.jnl" ;;
	rlog|rtail)
		do_journal "$Rfile.jnl" ;;
	syslog)
		journalctl -fau named.service ;;
	ls)
		do_axfr "$Fzone" "$@" ;;
	rls)
		do_axfr "$Rzone" "$@" ;;
	dig)
		do_dig "$@" ;;
	edit)
		do_edit "$Fzone" "$Ffile" ;;
	redit)
		do_edit "$Rzone" "$Rfile" ;;
	poke)
		rndc reconfig ;;
	soa)
		do_lookup "$Fzone." SOA &&
		do_lookup "$Rzone." SOA ;;
	ttl)
		ttl ;;
	*)
		die "unknown command '$cmd'" ;;
esac

# vim: ts=4:sw=4
