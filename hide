#!/usr/bin/env bash
# hide -- get rid of no-longer-useful files

. lib.bash || exit

_put() {
	local src=$1 dst=$2

	[[ ! -e "$dst" ]] && {
		log "moving to \"${dst#$HOME/}\""
		mv -f "$src" "$dst"
	}
}

dir="$HOME/Attic/Misc"

if ! (( $# )); then
	die "files to hide not specified"
fi

for arg; do
	if [[ ! -e $arg ]]; then
		err "item \"$arg\" not found"
		continue
	fi

	src=$(readlink -f "$arg")

	arg=${arg%/}
	name=${arg##*/}
	debug "name='$name'"
	if [[ $name == *.* ]]; then
		base=${name%.*}
		ext=${name##*.}
	else
		base=$name
		ext=
	fi
	debug "... base='$base' ext='$ext'"

	dstdir=$dir/$(date +%Y -d @$(stat -c %Y "$arg"))
	debug "... dstdir='$dstdir'"
	mkdir -p "$dstdir"

	dst="$dstdir/$name"
	_put "$arg" "$dst" ||
	for (( count=0; count < 9999; count++ )); do
		dst="$dstdir/$base-$count${ext:+.}$ext"
		_put "$arg" "$dst" && break
	done

	setfattr -h -n "user.stashed.from" -v "$src"               "$dst" &&
	setfattr -h -n "user.stashed.when" -v "$(date "+%FT%T%z")" "$dst"
done

(( ! errors ))
