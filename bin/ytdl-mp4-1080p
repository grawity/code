#!/usr/bin/env bash
. lib.bash || exit
vh="[height<=1080]"
vf="[vcodec^=avc1.][ext=mp4]"
f="bestvideo${vh}${vf}+bestaudio[ext=m4a]/bestvideo${vh}+bestaudio"
do: youtube-dl \
	--console-title \
	--add-metadata \
	--embed-subs \
	--sub-langs "all,-live_chat" \
	--format "$f" \
	--merge-output-format "mp4" \
	"$@"
