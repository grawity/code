#!/usr/bin/env bash
# rup -- collect uptime information from multiple hosts
#
# Inspired by the RPC-based 'rup' from SunOS 4 manual.

hosts='
	wolke
	sky
	star
	land
	ember
	wind
'

hosts=${*:-$hosts}

(for host in $hosts; do
	ssh $host 'printf "%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n" \
			"$(hostname)" \
			"$(uname -r)" \
			"$(uptime -p | sed "s/,.*//")" \
			"$(uname -v | sed "s/.*/[&]/")" \
			"$(uptime | sed "s/.*load average: //")" \
			"$(free -b | awk "/^Mem:/{printf \"%.0f%% used\", \$3*100/\$2}")" \
			"$(free -b | awk "/^Mem:/{print \$7, \"free\"}" | numfmt --to=iec)" \
			"$(free -b | awk "/^Mem:/{print \$2, \"total\"}" | numfmt --to=iec)" \
			' &
done
wait) |
sort -V -k 2,1 |
column -s $'\t' -t \
	-N "HOST,KERNEL,UPTIME,BUILD,LOAD AVG,MEM USAGE,MEM FREE,MEM TOTAL" \
	-H "BUILD" \
	-R "MEM USAGE,MEM FREE,MEM TOTAL"
