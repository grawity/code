#!/usr/bin/env bash

upload() { uguu -q "$1" 2>/dev/null; }
#upload() { imgur "$1" 2>/dev/null; }
upload() { command upload -q -0 -d xsauce -tt "$1"; }

img="$1" &&
imgrgb "$img" &&
echo "Uploading '$img'..." &&
url=$(upload "$img") &&
url="https://saucenao.com/search.php?db=999&url=$(urlencode "$url")" &&
echo "$url" &&
xdg-open "$url" &>/dev/null
