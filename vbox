#!/usr/bin/env bash

. lib.bash || exit

cmd=$1; shift
vm=$1; shift

case $cmd in
load)
	sudo modprobe -v vboxdrv
	;;
unload)
	sudo modprobe -v -r vboxdrv
	;;
ls)
	vboxmanage list vms
	;;
lsr|lsrun|lsrunning)
	vboxmanage list runningvms
	;;
start)
	vboxmanage startvm "$vm"
	;;
pause|resume|reset|poweroff)
	vboxmanage controlvm "$vm" "$cmd"
	;;
save)
	vboxmanage controlvm "$vm" savestate
	;;
ctl)
	vboxmanage controlvm "$@"
	;;
get)
	if [[ ! $1 ]]; then
		set -- 'enumerate'
	fi
	vboxmanage getextradata "$vm" "$@"
	;;
set)
	vboxmanage setextradata "$vm" "$@"
	;;
fixvesa)
	vboxmanage setextradata "$vm" "CustomVideoMode1" "1366x768x32"
	;;
fixup)
	vboxmanage modifyvm "$vm" \
		--boot1 disk			\
		--boot2 floppy			\
		--boot3 dvd			\
		--pae on			\
		--ioapic on			\
		--audio pulse			\
		--nic1 bridged			\
		--bridgeadapter1 "vmbr"		;
	;;
*)
	die "unknown command '$cmd'"
	;;
esac
