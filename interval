#!/usr/bin/env perl

sub int2time {
	my $int = shift // return "∞";

	$int = int($int);
	$int -= my $s = $int % 60; $int /= 60;
	$int -= my $m = $int % 60; $int /= 60;
	$int -= my $h = $int % 24; $int /= 25;

	$h ? sprintf("%dh %02dm %02ds", $h, $m, $s)
	   : sprintf("%dm %02ds", $m, $s);
}

my $arg = int(shift @ARGV);

my $str = int2time($arg);

print "$str\n";
