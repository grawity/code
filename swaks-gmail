#!/usr/bin/env bash

. lib.bash || exit

host='smtp.gmail.com'
user=$(getnetrc -df %u "smtp/$host")
pass=$(getnetrc -df %p "smtp/$host" "$user")

[[ $user && $pass ]] || die "credentials for '$host' not found in ~/.netrc"

case $user in
	*@*) from="$user";;
	*) from="$user@gmail.com";;
esac

exec swaks \
	--server "$host" --port 587 --tls --tls-verify \
	--auth PLAIN --auth-user "$user" --auth-pass "$pass" \
	--from "$from" "$@"
