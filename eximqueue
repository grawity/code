#!/bin/sh
# eximqueue - user-friendly interface to exim queue management

cmd=$1; shift
case $cmd in
	'')
		exim -bp;;
	delete)
		exim -Mrm "$@";;
	set-sender)
		exim -Mes "$@";;
	freeze)
		exim -Mf "$@";;
	giveup)
		exim -Mg "$@";;
	thaw)
		exim -Mt "$@";;
	dump)
		exim -Mvc "$@";;
	dump-log)
		exim -Mvl "$@";;
esac
