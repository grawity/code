#!/usr/bin/env bash

wm=$(wmctrl -m | sed -n 's/^Name: //p')
hist=${XDG_CACHE_HOME:-$HOME/.cache}/dmenu.history

prompt='run:'
#tool=rofi
font='Source Sans Pro:size=12'

# wmii theme
normal_fg='#bbbbbb'
normal_bg='#222222'
selected_fg='#eeeeee'
selected_bg='#005577'

normal_fg='#cacaca'
normal_bg='#121212'

# for bemenu & rofi
title_fg='#d81860'
title_bg='#121212'


if [[ $wm == Openbox ]]; then
	font='Monaco:size=10'
	#font='Source Code Pro:size=12'
	normal_fg='#bbbbbb'
	normal_bg='#222222'
	selected_bg='#303436'
	selected_fg='#94d01c'
fi

menu=(dmenu -l 7 -fn "$font"
	-nb "$normal_bg"
	-nf "$normal_fg"
	-sb "$selected_bg"
	-sf "$selected_fg")

if [[ $tool == bemenu ]]; then
	menu=(bemenu -l 7 --fn "$font"
		--nb "$normal_bg"
		--nf "$normal_fg"
		--hb "$selected_bg"
		--hf "$selected_fg"
		--tb "$title_bg"
		--tf "$title_fg")
elif [[ $tool == rofi ]]; then
	menu=(rofi -dmenu -location 0 -matching fuzzy
		-color-window "$normal_bg,$title_fg"
		-color-normal "$normal_bg,$normal_fg,$normal_bg,$selected_bg,$selected_fg")
	prompt=${prompt%:}
fi

ign='mm'

_ign="^($ign)( |\$)"

input=$(dmenu-print-history "$hist" | "${menu[@]}" -p "$prompt")

# Hack for bypassing dmenu's insistent autocompletion
input=${input#+}

if [[ "$input" ]]; then
	if ! [[ "$input" =~ $_ign ]]; then
		echo "$(date +%s) $input" >> "$hist"
	fi

	echo "$input" | ${SHELL:-/bin/sh} &
fi
