#!/usr/bin/env bash

declare -A urls=(
	# Linode Europe
	[linode-fra]=http://speedtest.frankfurt.linode.com/100MB-frankfurt.bin
	[linode-lon]=http://speedtest.london.linode.com/100MB-london.bin
	# Linode Americas
	[linode-atl]=http://speedtest.atlanta.linode.com/100MB-atlanta.bin
	[linode-dal]=http://speedtest.dallas.linode.com/100MB-dallas.bin
	[linode-fre]=http://speedtest.fremont.linode.com/100MB-fremont.bin
	[linode-new]=http://speedtest.newark.linode.com/100MB-newark.bin
	# Linode Asia
	[linode-sin]=http://speedtest.singapore.linode.com/100MB-singapore.bin
	[linode-tok]=http://speedtest.tokyo2.linode.com/100MB-tokyo2.bin
)

host=${1:-linode-fra}

wget -O /dev/null "${@:2}" "${urls["$host"]}"
