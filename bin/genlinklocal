#!/usr/bin/env python3
import argparse
import ipaddress
import os

iid = bytearray(os.urandom(8))
# Clear the U/L bit to indicate "Local"
iid[0] &= ~0x2
buf = bytes([0xfe, 0x80,
             0x00, 0x00,
             0x00, 0x00,
             0x00, 0x00,
             *iid])
addr = ipaddress.IPv6Address(buf)
print(addr)
