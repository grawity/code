#!/usr/bin/env bash

. lib.bash || exit

PATH=/usr/lib:/usr/sbin:$PATH

if ! have sendmail; then
	vdie "sendmail program not found"
else
	vmsg "sending test mail to self"
fi

sendmail -i "$USER" <<-EOF
Subject: Test from $(hostname)
Date: $(date "+%a, %d %b %Y %H:%M:%S %z")
To: <$USER>

Test mail from $USER ($UID) at $(fqdn || hostname)
EOF
