#!/bin/sh
dir=~/Attic/Misc/$(date +%Y)/traceroute
mkdir -p "$dir"
local=$(hostname -s)
for host; do
	log="$dir/trace-$local-$host-$(date +%Y-%m).log"
	{
		echo "--- $host ($(date -R) @$(date +%s)) ---"
		traceroute -4 "$host"
		traceroute -6 "$host"
		#mtr -r -w -c 1 --show-ips "$host"
		echo "ok $?"
	} \
	|& tee -a "$log"
done
