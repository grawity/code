#!/bin/bash
# myip -- use online services to determine external IPv4 address

. lib.bash || exit

usage() {
	echo "Usage: $progname [-46]"
}

afs='-4 -6'

while getopts :46 OPT; do
	case $OPT in
	4) afs="-4";;
	6) afs="-6";;
	*) lib:die_getopts;;
	esac
done; shift $[OPTIND-1]

for af in $afs; do
	case $af in
	-4) type=A;;
	-6) type=AAAA;;
	esac

	dig $af +short myip.opendns.com. $type @resolver1.opendns.com. ||
	curl $af -Ssf http://whatismyip.akamai.com
done
