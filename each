#!/usr/bin/env bash
# each -- apply command to each argument individually
#
# Example:
#   --- for x in one two three; do frob "$x"; done
#   +++ each frob -- one two three

. lib.bash || exit

usage() {
	echo "Usage: ${0##*/} <command> [<static args>] -- <loop args>"
	echo
	echo_opt "-n" "dry run; output shell commands to stdout"
	echo
	echo "The static arguments may include a {}, which will be replaced with the"
	echo "current loop argument in each iteration."
}

Xecho() {
	printf '%q ' "${@:1:$#-1}"
	printf '%q\n' "${!#}"
}

args=()
cmd=()
dryrun=0
flag=0

while getopts ":n" OPT; do
	case $OPT in
	n) dryrun=1;;
	*) lib:die_getopts;;
	esac
done; shift $((OPTIND-1))

if [[ -t 0 ]]; then
	# Find the *last* double-dash arg
	ldash=0
	for (( i=1; i<=$#; i++ )); do
		if [[ ${!i} == "--" ]]; then
			ldash=$i
		fi
	done
	if (( ldash )); then
		cmd=("${@:1:ldash-1}")
		args=("${@:ldash+1}")
	else
		cmd=("${@:1:1}")
		args=("${@:2}")
	fi
else
	for arg; do
		cmd+=("$arg")
	done
fi

if (( ! ${#cmd[@]} )); then
	echo "each: command not specified" >&2
	exit 2
fi

if (( dryrun )); then
	cmd=(Xecho "${cmd[@]}")
fi

# Find the {} placeholder
lpos=0
for (( i=0; i<${#cmd[@]}; i++ )); do
	if [[ ${cmd[i]} == *"{}"* ]]; then
		if (( lpos )); then
			echo "each: only one '{}' is allowed" >&2
			exit 2
		fi
		lpos=$i
		larg=${cmd[lpos]}
	fi
done

# If no placeholder, append arg as the last item
if (( !lpos )); then
	lpos=${#cmd[@]}
	larg="{}"
fi

# Run with args
if [[ -t 0 ]]; then
	for arg in "${args[@]}"; do
		cmd[lpos]=${larg//"{}"/"$arg"}
		"${cmd[@]}"
	done
else
	while IFS= read -r arg; do
		cmd[lpos]=${larg//"{}"/"$arg"}
		"${cmd[@]}" </dev/tty
	done
fi
