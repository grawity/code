#!/usr/bin/env bash

. lib.bash || exit

. $path_config/synced/irc.conf || exit

lock=$path_runtime/irc-$XDG_SESSION_ID.lock
exec {fd}<>"$lock" && flock -xn $fd ||
	die "already connected from $HOSTNAME/$XDG_SESSION_ID"

export MOSH_TITLE_NOPREFIX='y'
mosh $irc_host -- tmux attach -t irc
r=$?

hi >&/dev/null {fd}>&- &

exit $r
