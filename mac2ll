#!/usr/bin/env python
import ipaddress
import re
import sys

args = sys.argv[1:]

for mac in args:
    mac = re.split("[:-]", mac)
    mac = [int(x, 16) for x in mac]
    mac[0] ^= 2
    addr = [0xFE, 0x80, 0x00, 0x00,
            0x00, 0x00, 0x00, 0x00] \
         + mac[:3] + [0xFF, 0xFE] + mac[3:]
    addr = bytes(addr)
    addr = ipaddress.IPv6Address(addr)
    print(addr)
