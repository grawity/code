#!/usr/bin/env python
# unwrap LDIF files
import base64
import sys

def xprint(buf, decode=False):
    if decode and ": " in buf:
        k, v = buf.split(": ", 1)
        if k.endswith(":"):
            try:
                v = base64.b64decode(v).decode()
            except UnicodeDecodeError:
                pass
            else:
                k = k[:-1]
        buf = "%s: %s" % (k, v)
    print(buf)

opts = {"decode": False}
for arg in sys.argv[1:]:
    if arg == "-d":
        opts["decode"] = True

buf = ""
for line in sys.stdin:
    line = line.rstrip("\r\n")
    if line.startswith(" "):
        buf += line[1:]
    else:
        xprint(buf, **opts)
        buf = line
if buf:
    xprint(buf, **opts)
