#!/bin/sh

days=30

if [ -t 2 ]; then
	vf='-print' vr='-v'
	set -x
else
	vf='' vr=''
fi

find ~/src/_makepkg/ -maxdepth 1 \
	-type f \( -ctime +$days -not -perm +1111 \) \
	$vf -delete

rm $vr -f ~/src/_makepkg/*current*

find ~/pkg/ -maxdepth 3 -xtype l $vf -delete

if [ -t 2 ]; then
	find ~/pkg/ -name PKGBUILD -execdir rm $vr -rf pkg src \;
fi
