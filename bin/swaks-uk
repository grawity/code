#!/usr/bin/env bash

. lib.bash || exit

host='mail.utenos-kolegija.lt'
user=$(ad gp "@host=$host" :login)
pass=$(ad gp "@host=$host" !pass)

[[ $user && $pass ]] || die "credentials for '$host' not found"

case $user in
	*@*) from="$user";;
	*) from="${user}@utenos-kolegija.lt";;
esac

do: swaks \
	--server "$host" \
	--port 587 \
	--tls \
	--tls-verify \
	--auth PLAIN \
	--auth-user "$user" \
	--auth-password "$pass" \
	--from "$from" \
	"$@"
