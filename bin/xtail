#!/usr/bin/env bash
# xcat -- cat but with headers indicating each file

header='\e[38;5;12m==> %s <==\e[m\n'

if [[ ${0%%*/} == *tail ]]; then
	lines=10
	if [[ $1 == -n ]]; then
		lines=${1#-n}; shift
		if [[ ! $lines ]]; then
			lines=$2; shift
		fi
	fi
	for arg; do
		printf "$header" "$arg"
		tail -n "$lines" "$arg"
		printf '\n'
	done
else
	for arg; do
		printf "$header" "$arg"
		cat "$arg"
		printf '\n'
	done
fi
