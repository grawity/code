#!/usr/bin/env bash

domain=${1%.}.

parent=${domain#*.}

parent_ns=$(dig +short $parent NS | natsort)

get_serial() {
	dig +noall +answer "$1" SOA @"$2" | awk '$4 == "SOA" {print $7}'
}

for pns in $parent_ns; do
	glue_ns=$(dig +noall +authority $domain NS @$pns | awk '{print $5}' | natsort)
	printf "\e[1;35m$pns\e[m (for $parent)\n"
	for gns in $glue_ns; do
		printf " └ \e[1;36m%s\e[m (for $domain)\n" $gns
		if [[ $gns == $domain || $gns == *.$domain ]]; then
			gip=$(dig +noall +additional $domain NS @$pns |
				awk -v d=$gns '$1 == d {print $5}')
			from='glue'
		else
			gip=$(dig +short $gns A; dig +short $gns AAAA)
			from='DNS'
		fi
		if [[ $gip ]]; then
			for ip in $gip; do
				serial=$(get_serial "$domain" "$ip")
				printf "   └ \e[1;33m%s\e[m serial \e[33m%s\e[m (from %s)\n" "$ip" "$serial" "$from"
			done
		else
			printf "   └ \e[1;31m(cannot resolve $from)\e[m\n"
		fi
	done
done
