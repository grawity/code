#!/usr/bin/env python3
import sys

rate = 3.4528

if "eurify" in sys.argv[0]:
    for arg in sys.argv[1:]:
            ltl = float(arg)
            eur = ltl / rate
            print("%.4f LTL = %.4f EUR" % (ltl, eur))
else:
    for arg in sys.argv[1:]:
            eur = float(arg)
            ltl = eur * rate
            print("%.4f EUR = %.4f LTL" % (eur, ltl))
