#!/usr/bin/env bash
. lib.bash || exit
vh=""
vf="[ext=mp4]"
f="bestvideo${vh}${vf}+bestaudio[ext=m4a]/bestvideo${vh}+bestaudio"
do: youtube-dl \
	--console-title \
	--add-metadata \
	--embed-subs \
	--sub-format "ass/srt/best" \
	--convert-subs "ass" \
	--format "$f" \
	--merge-output-format "mkv" \
	"$@"
