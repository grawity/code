#!/usr/bin/env bash
# nm-wifi-list -- list Wi-Fi networks through NetworkManager
#
# A simple wrapper that just reorders the columns to fit on my screens.

if [[ -t 1 ]]; then
	colors=yes
else
	colors=auto
fi

while getopts "c" OPT; do
	case $OPT in
	c) colors=yes;;
	*) exit 2;;
	esac
done; shift $((OPTIND-1))

nmcli \
  -f "in-use,ssid,mode,chan,bars,signal,rate,security,bssid" \
  -c $colors \
  dev wifi list \
  --rescan no | cat
