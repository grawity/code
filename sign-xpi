#!/usr/bin/env bash

. lib.bash || exit

cert=""
nssdb="sql:$HOME/.pki/nssdb"
force=0

have signtool  || err "missing 'signtool' from NSS"
have zip       || err "missing 'zip' tool"
(( ! errors )) || exit

while getopts ":c:d:f" OPT; do
	case $OPT in
	c) cert=$OPTARG;;
	d) nssdb=$OPTARG;;
	f) force=1;;
	*) die_getopts;;
	esac
done; shift $((OPTIND-1))

if [[ ! $cert ]]; then
	die "certificate name not specified"
fi

if [[ ! -f install.rdf ]]; then
	die "directory does not contain a valid Mozilla extension"
fi

out_file="${1:-${PWD##*/}}.xpi"

(shopt -s nullglob; rm -f *.xpi)

signtool -d "$nssdb" -k "$cert" -Z "$out_file" .

log "created \"$out_file\""
