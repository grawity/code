#!/usr/bin/env bash
# vim: ts=4:sw=4:et

. lib.bash || exit
. libkitchensink.bash || exit

do_reupload=0
opt_quiet=0

while getopts ':fq' OPT; do
    case $OPT in
    f) do_reupload=1;;
    q) opt_quiet=1;;
    *) lib::die_getopts;;
    esac
done; shift $((OPTIND-1))

(( $# )) || die "nothing to upload"

clip=()

for f in "$@"; do
    if [[ -e "$f" ]]; then
        curl_args=(-F "file=@\"$f\"" -F "randomname=1")
    else
        err "file '$f' not found"
        continue
    fi

    if (( DEBUG >= 2 )); then
        curl_args+=(-v)
    fi

    if (( ! opt_quiet )) && [[ -t 2 ]] && ks:larger_than "$f" "1 << 18"; then
        curl_args+=(-#)
    else
        curl_args+=(-s)
    fi

    url=$(curl -S "${curl_args[@]}" "https://uguu.se/api.php?d=upload-tool")

    if [[ $url == https://* ]]; then
        if (( opt_quiet )); then
            echo "$url"
        else
            echo "$f â†’ $url"
            clip+=("$url")
        fi
    else
        err "could not upload '$f', received: $url"
    fi
done

if [[ "$DISPLAY" ]] && (( ${#clip[@]} )); then
    echo -n "${clip[*]}" | xsel -i -b
fi

(( !errors ))
